= simple_form_for(@user, url: url) do |f|
  = f.error_notification
  .form-inputs
    = f.input :phone, required: true, autofocus: true
    = f.input :name, required: true
    = f.association :center
    = f.input :role, required: true, autofocus: true, collection: User.roles
  .form-actions
    = f.button :submit, 'Submit'
