h1 Register Program Participants
br

h5.d-inline.mr-2 Program Details
= link_to 'Choose another program', new_participant_path, class: 'd-inline mr-2'
== render partial: 'programs/table', locals: {programs: [@program], actions: false}
br

h5.d-inline.mr-2 Registered Participants
.d-inline.mr-2.btn-link aria-expanded="true" data-toggle="collapse" data-target="#registered-p" show / hide
#registered-p.collapse.show
  == render partial: 'participants/table', locals: {participants: @program.participants, short: true}
br
br

h5.d-inline.mr-2 Pending Registrations
.d-inline.mr-2.btn-link aria-expanded="true" data-toggle="collapse" data-target="#temp-p" show / hide
#temp-p.collapse.show
  == render partial: 'participants/temp/table', locals: {participants: @program.temp_participants.order(:name)}
br
br

h5#register.d-inline.mr-2 Create Registration
.d-inline.mr-2
  = link_to 'New Registration', new_participant_path(program_id: @program.id, anchor: 'register')
== render partial: 'form', locals: { url: participants_path(program_id: params[:program_id], anchor: 'register'), participant: @participant }
